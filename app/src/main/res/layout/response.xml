<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        android:background="#f49e42"
        android:id="@+id/title"
        android:text="TITLE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF"
        android:background="#f49e42"
        android:id="@+id/q1"
        android:text="TEMP"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/q1Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/q1Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine" >
        </EditText>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:textColor="#FFFFFF"
        android:background="#f49e42"
        android:id="@+id/q2"
        android:text="TEMP2"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/q2Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
        <EditText
            android:id="@+id/q2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine" >
        </EditText>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:textColor="#FFFFFF"
        android:background="#f49e42"
        android:id="@+id/q3"
        android:text="TEMP3"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/q3Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp">
        <EditText
            android:id="@+id/q3Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine" >
        </EditText>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:textColor="#FFFFFF"
        android:background="#f49e42"
        android:id="@+id/q4"
        android:text="TEMP4"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/q4Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp">
        <EditText
            android:id="@+id/q4Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine" >
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/buttonError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="425dp">
        <Button
            android:id="@+id/submitResponse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit Response"
            android:onClick="submitResponse"/>
    </android.support.design.widget.TextInputLayout>

</FrameLayout>